---
import { getCollection } from "astro:content";
import Technology from "./components/Technology.astro";

const { language } = Astro.props;

const stack = await getCollection("stack");
const technologies = await getCollection("technologies");
const softSkills = await getCollection("softSkills");
const hardSkills = await getCollection("hardSkills");

const technologyMap = new Map();
technologies.forEach((tech) => {
  technologyMap.set(tech.data.name, tech.data.svg);
});
---

<section id="skills" class="mb-16 px-5 md:px-0 space-y-10 scroll-mt-[80px] fade-in">
  <h2 class="relative text-center text-4xl text-my-white font-semibold">
    {language === "en" ? "Skills" : "Habilidades"}

    <span class="w-30 bg-my-red rounded-full shadow-lg absolute left-1/2 transform translate-y-3 -translate-x-1/2 bottom-0 h-1"></span>
  </h2>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="flex flex-col gap-y-8">
      {/* Technologies */}
      <div class="space-y-8">
        <h3 class="relative text-center text-2xl text-my-yellow font-semibold">
          {language === "en" ? "Technologies" : "Tecnologías"}<span class="text-my-red">.</span>

          <span class="w-24 bg-my-white rounded-full shadow-lg absolute left-1/2 transform translate-y-1 -translate-x-1/2 bottom-0 h-0.5"></span>
        </h3>

        <div class="flex flex-wrap justify-center items-center gap-5">
          <h4 class="w-full text-center text-lg text-my-light-blue font-semibold">
            {language === "en" ? "Main Stack" : "Stack Principal"}
          </h4>

          <div class="px-6 flex flex-wrap justify-center items-start gap-4">
            {stack
              .filter((item) => item.slug === "main-stack")
              .flatMap(({ data }) =>
                data.technologiesNames.map((technologyName) => {
                  const svg = technologyMap.get(technologyName);
                  return svg ? <Technology key={technologyName} htmlString={svg}/> : null;
                })
              )}
          </div>

          <h4 class="w-full text-center text-lg text-my-light-blue font-semibold">
            {language === "en" ? "Others" : "Otras"}
          </h4>

          <div class="px-6 flex flex-wrap justify-center items-start gap-4">
            {stack
              .filter((item) => item.slug === "used-but-not-dominated")
              .flatMap(({ data }) =>
                data.technologiesNames.map((technologyName) => {
                  const svg = technologyMap.get(technologyName);
                  return svg ? <Technology key={technologyName} htmlString={svg} /> : null;
                })
              )}
          </div>
        </div>
      </div>
    </div>


    {/* Soft Skills */}
    <div class="flex flex-col gap-y-8">
      <div class="space-y-8">
        <h3 class="relative text-center text-2xl text-my-yellow font-semibold">
          {language === "en" ? "Soft Skills" : "Habilidades Blandas"}<span class="text-my-red">.</span>

          <span class="w-24 bg-my-white rounded-full shadow-lg absolute left-1/2 transform translate-y-1 -translate-x-1/2 bottom-0 h-0.5"></span>
        </h3>
  
        <div class="mb-4 flex items-center justify-center gap-2 flex-wrap">
          {softSkills.map((skill) => {
            const { data } = skill;
            const { en, es } = data;
  
            let name: string = en.name;
  
            if (language === 'es') {
              name = es.name;
            }
  
            return (
              <div class="flex justify-center items-center">
                <p class="py-2 px-4 text-center text-my-white border-1 rounded-3xl hover:shadow-blue-xs hover:text-my-light-blue transition-all duration-300 ease-in-out">
                { name }
              </p>
            </div>
            );
          })}
        </div>
      </div>

      <div class="space-y-8">
        <h3 class="relative text-center text-2xl text-my-yellow font-semibold">
          {language === "en" ? "Other Hard Skills" : "Otras Habilidades Duras"}<span class="text-my-red">.</span>

          <span class="w-24 bg-my-white rounded-full shadow-lg absolute left-1/2 transform translate-y-1 -translate-x-1/2 bottom-0 h-0.5"></span>
        </h3>
  
        <div class="mb-4 flex items-center justify-center gap-2 flex-wrap">
          {hardSkills.map((skill) => {
            const { data } = skill;
            const { name } = data;
  
            let nameHardSkill: string = name.en;
  
            if (language === 'es') {
              nameHardSkill = name.es;
            }
  
            return (
              <div class="flex justify-center items-center">
                <p class="py-2 px-4 text-center text-my-white border-1 rounded-3xl hover:shadow-blue-xs hover:text-my-light-blue transition-all duration-300 ease-in-out">
                { nameHardSkill }
              </p>
            </div>
            );
          })}
        </div>
      </div>

      {/* Languages */}
      <div class="space-y-8">
        <h3 class="relative text-center text-2xl text-my-yellow font-semibold">
          {language === "en" ? "Languages" : "Lenguajes"}<span class="text-my-red">.</span>

          <span class="w-24 bg-my-white rounded-full shadow-lg absolute left-1/2 transform translate-y-1 -translate-x-1/2 bottom-0 h-0.5"></span>
        </h3>
        <div class="grid grid-cols-2">
          <div class="flex flex-col items-center space-y-4
          ">
            <h4 class="w-full text-center text-xl text-my-light-blue font-semibold">{language === "en" ? "Spanish" : "Español"}</h4>

